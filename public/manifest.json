{
  "manifest_version": 3,
  "version": "2.0.0",
  "name": "HelpMeOutMine",
  "description": "This extension is a Chrome extension that allows user to record their screen and voice",
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "16": "/assets/logo16.png",
      "32": "/assets/logo32.png",
      "192": "/assets/logo192.png",
      "512": "/assets/logo512.png"
    }
  },
  "icons": {
    "16": "/assets/logo16.png",
    "32": "/assets/logo32.png",
    "192": "/assets/logo192.png",
    "512": "/assets/logo512.png"
  },
  "permissions": [
    "desktopCapture",
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
